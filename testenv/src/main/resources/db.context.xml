        <property name="password" value="${spring.datasource.password}"/>
    </bean-->

    <bean id="metaDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${spring.metadatasource.driver-class-name}"/>
        <property name="url" value="${spring.metadatasource.url}"/>
        <property name="username" value="${spring.metadatasource.username}"/>
        <property name="password" value="${spring.metadatasource.password}"/>
    </bean>

    <bean id="transactionManager"
          class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory" />
    </bean>

    <bean id="entityManagerFactory"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="org.webvane" />
        <property name="dataSource" ref="metaDataSource" />
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
                <property name="database" value="${import.db.hybernate.type}" />
                <property name="showSql" value="false" />
            </bean>
        </property>
        <property name="jpaProperties">
            <props>
                <prop key="hibernate.cache.use_second_level_cache">false</prop>
            </props>
        </property>
    </bean>

    <bean id="servicePropertyDao" class="org.webvane.common.dao.impl.ServicePropertyDaoImpl"/>

    <bean id="servicePropertyService" class="org.webvane.common.service.ServicePropertyService">
        <constructor-arg ref="servicePropertyDao"/>
    </bean>

    <!-- components init code -->

    <bean id="componentDao" class="org.webvane.common.dao.impl.ComponentDaoImpl"/>

    <bean id="componentService" class="org.webvane.common.service.ComponentService">
        <constructor-arg ref="componentDao"/>
    </bean>

    <bean id="componentManager" class="org.webvane.common.service.ComponentManager">
        <constructor-arg value="org.webvane"/>
        <constructor-arg value="${common.db.basepackage}"/>
        <constructor-arg ref="componentService"/>
        <constructor-arg ref="dataSource"/>
        <constructor-arg value="1"/>
    </bean>

    <bean id="beanExplorer" class="org.webvane.common.spring.beansexplorer.BeanExplorer"/>

    <bean id="startEventListener" class="org.webvane.common.spring.StartEventListener">
        <constructor-arg>
            <list>
                <bean id="componentInitAppStarter" class="org.webvane.common.spring.starters.ComponentInitAppStarter"/>
                <bean id="initializableAppStarter" class="org.webvane.common.spring.starters.InitializableAppStarter"/>
                <bean id="dataConfigAppStarter" class="org.webvane.dataconnect.config.starter.DataConfigAppStarter"/>
                <bean id="aclStarter" class="org.webvane.acl.starter.AclStarter"/>
            </list>
        </constructor-arg>
    </bean>

</beans>
